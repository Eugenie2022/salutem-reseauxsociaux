{% extends 'base.html.twig' %}

{% block title %}{{ medicalArea.name }}{% endblock %}

{% block body %}
<section class="container">
    <h1>{{ medicalArea.name }}</h1>
    {% if medicalArea.doctors|length <= 0 %}
    <p>Aucuns docteurs dans cet établissement.</p>
    {% else %}
    <h3>Docteurs présents dans cet établissement :</h3>
    {% endif %}
</section>

<section class="doctors">
    <div class="container">
        {% for doctor in medicalArea.doctors %}
                {% include 'doctor/_card.html.twig' with {'doctor' : doctor} only %}
        {% endfor %}
    </div>
</section>
{% endblock %}
