{% extends 'admin/base.html.twig' %}

{% block title %}SocialNetwork index{% endblock %}

{% block body %}
    <h1>SocialNetwork index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Icon</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for social_network in social_networks %}
            <tr>
                <td>{{ social_network.id }}</td>
                <td>{{ social_network.name }}</td>
                <td><i class="fa {{ social_network.icon }}"></i></td>
                <td>{{ social_network.link }}</td>
                <td>
                    <a href="{{ path('app_admin_social_network_show', {'id': social_network.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i> Afficher</a>
                    <a href="{{ path('app_admin_social_network_edit', {'id': social_network.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i> Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_social_network_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>Create new</a>
{% endblock %}
